cc_library {
    name: "libadbd_auth",
    cflags: [
        "-Wall",
        "-Wextra",
        "-Wthread-safety",
        "-Werror",
    ],
    srcs: [
        "adbd_auth.cpp",
    ],
    export_include_dirs: ["include"],

    version_script: "libadbd_auth.map.txt",
    stubs: {
        symbol_file: "libadbd_auth.map.txt",
    },

    host_supported: true,
    recovery_available: true,
    target: {
        darwin: {
            enabled: false,
        }
    },

    shared_libs: [
        "libbase",
        "libcutils",
        "liblog",
        "libcrypto",
    ],
}

