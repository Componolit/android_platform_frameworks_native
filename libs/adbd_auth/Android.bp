cc_library {
    name: "libadbd_wifi_pairing",
    cflags: [
        "-Wall",
        "-Wextra",
        "-Wthread-safety",
        "-Werror",
    ],
    proto: {
        export_proto_headers: true,
        type: "lite",
    },
    srcs: [
        "pairing/pairing_auth.cpp",
        "crypto/aes_128_gcm.cpp",
        "crypto/ec_key.cpp",
        "crypto/device_identifier.cpp",
        "crypto/key.cpp",
        "crypto/key_store.cpp",
        "crypto/key_type.cpp",
        "crypto/proto/key_store.proto",
    ],
    target: {
        android: {
            version_script: "libadbd_wifi_pairing.map.txt",
	},
        windows: {
	    enabled: true,
	    srcs: [
                "compat/win32-deps.cpp",
            ],
	},
	host: {
            cflags: [ "-DHOST_BUILD", ],
        },
    },
    export_include_dirs: ["include"],

    stubs: {
        symbol_file: "libadbd_wifi_pairing.map.txt",
    },

    host_supported: true,
    recovery_available: true,

    shared_libs: [
        "libbase",
        "libcrypto",
        "libcutils",
        "liblog",
    ],
}

