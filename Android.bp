ndk_headers {
    name: "libandroid_ndk_headers",
    from: "include/android",
    to: "android",
    srcs: ["include/android/**/*.h"],
    license: "NOTICE",
}

cc_library_headers {
    name: "libandroid_headers",
    vendor_available: true,
    export_include_dirs: ["include"],
}

subdirs = [
    "cmds/*",
    "libs/*",
    "opengl",
    "services/*",
    "vulkan",
]
